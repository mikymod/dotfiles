[user]
	email = mikymod@gmail.com
	name = Michele Rossi

[core]
	longpaths = true
    editor = nvim

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[alias]
	co = checkout
	st = status
	sts = status -s
	rh = reset HEAD         # Equivalent to `git restore --staged`
	rhh = reset --hard HEAD
	pu = pull
	up = push

	cam = commit -am
	dc = diff --cached

	# View abbreviated SHA, description, and history graph of the latest 20 commits
    l = "!. ~/.githelpers && pretty_git_log"
    la = "!git l --all"
    lr = "!git l -30"
    lra = "!git lr --all"

    # This searches the commit messages for a pattern, not the actual code changes within the files.
    # You use this to find commits based on what the author wrote in the commit description.
    lg = "!git l -G $1 -- $2"

[push]
	default = current

[init]
	defaultBranch = main
