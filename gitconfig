[user]
	email = mikymod@gmail.com
	name = Michele Rossi

[core]
	editor = code --wait
	longpaths = true
	sshCommand = ssh

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[alias]
	co = checkout
	st = status
	sts = status -s
	rh = reset HEAD
	rhh = reset --hard HEAD
	pu = pull
	up = push

	cam = commit -am
	dc = diff --cached

	# View abbreviated SHA, description, and history graph of the latest 20 commits
    l = "!. ~/.githelpers && pretty_git_log"
    la = "!git l --all"
    lr = "!git l -30"
    lra = "!git lr --all"
    lg = "!git l -G $1 -- $2"

[push]
	default = current

[pull]
	rebase = true

[init]
	defaultBranch = main
